<view id="news-list">
  <view class="list-item" wx:for="{{newsList}}" wx:key="item">
    <view bindtap="goToNewsDetail" data-newsid="{{item.id}}" class="news-item-container">
      <image src="{{item.poster}}"/>
      <view class="news-text">
        <text class="news-title">{{item.title}}</text>
        <text class="news-date">{{item.add_date}}</text>
      </view>
    </view>
  </view>
</view>
